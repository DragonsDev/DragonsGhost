{{!< default}}

    <div id="wrap">
    
    <div id="header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
      <div class="container">
        <div class="row">
        	<div class="col-md-7">
	        	<h1><a href="{{@blog.url}}" title="{{@blog.title}}">{{@blog.title}}</a></h1>
	        	<p class="desc">{{@blog.description}}</p>
        	</div>
        	<div class="col-md-5 logo">
	       {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img class="pull-right" src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        	</div>
        </div>
      </div>
    </div>
    <div class="brands"></div>

      <div class="container">
      
      {{#post}}
      
        <div class="page-header">
        <span class="pull-right post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{#if tags}}on {{tags}}{{/if}}</span>
	    <h2><a href="{{url}}">{{{title}}}</a></h2>
        </div>
        
        <div class="xcontent">
        <div class="lead xjustify">{{content}}</div>

        
        <div class="row">
        <div class="col-md-10">
        {{#if author}}
             <h4>{{author.name}}</h4>
             <p>{{author.bio}}</p>
        {{/if}}
        </div>
        
        <div class="col-md-2">
        <h5>Compartir:</h5>
                <a class="icon-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>

        </div>
</div>
        
        </div>
        
      {{/post}}
        
      </div>
      
      
    </div>